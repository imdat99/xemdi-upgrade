{
    "compilerOptions": {
      "allowJs": true,
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "checkJs": false,
      "declaration": true,
      "declarationMap": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "jsx": "react-jsxdev",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "strict": true,
      "outDir": "dist/app",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "skipLibCheck": true,
      "sourceMap": false,
      "target": "ESNext",
    },
    "include": [
      "api/**/*",
      "types/*",
      "src/server.ts",
      "src/ServerRender.tsx",
      "vite-plugin-react-server.ts"
    ],
    "exclude": [
      "dist",
      "src/**/*.tsx"
    ],
    // "ts-node": {
    //   "transpileOnly": true,
    //   "compilerOptions": {
    //     "module": "CommonJS"
    //   }
    // }
  }